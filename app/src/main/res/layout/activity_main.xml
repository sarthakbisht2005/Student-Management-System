                                android:layout_height="wrap_content"
                                android:layout_margin="1dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:padding="8dp"
